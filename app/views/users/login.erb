<div class='flash'>
  <% if flash.has?(:message) %>
    <%= flash[:message] %>
  <% end %>
</div>

<h2>Log In</h2>

<form action='/login' method='POST'>
  <label>Username: </label>
    <input type='text' name='username'>

  <br><br>

  <label>Password: </label>
    <input type='password' name='password'>

  <br><br>

  <input type='submit' value='Log In'>
</form>
