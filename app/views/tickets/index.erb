<h2>Tickets Homepage</h2>

<a href='/tickets/new'>Create New Ticket</a>

<h3>Welcome <%= @user.username.capitalize %></h3>

<h4 class='list'>Your Tickets:</h4>
<br>
  <ul>
    <% @tickets.each do |ticket| %>
      <li>
        <b>Movie Name:</b> <%=ticket.movie_name%>
        <br>
        <b>Date:</b> <%=ticket.date%>
        <br>
        <b>Movie Theater:</b> <%=ticket.movie_theater%>
      </li>
      <br>
    <%end%>
  </ul>
